<Window
    x:Class="WpfApplication2.Views.gettingName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApplication2.Views"
    mc:Ignorable="d"
    Title="gettingName"
    Height="300"
    Width="300">
    <Window.Background>
        <ImageBrush
            ImageSource="/WpfApplication2;component/Resources/background.gif" />
    </Window.Background>
    <Grid>
        <TextBlock
            x:Name="gettingNameTextBlock"
            HorizontalAlignment="Left"
            Height="30"
            Margin="10,34,0,0"
            TextWrapping="Wrap"
            Text="Please enter your name so we can save your score"
            VerticalAlignment="Top"
            Width="242"
            Foreground="#FF10F51B"
            FontFamily="OCR A Extended"
            FontSize="14" />
        <TextBox
            x:Name="textBox"
            HorizontalAlignment="Left"
            Height="18"
            Margin="10,69,0,0"
            TextWrapping="Wrap"
            Text="TextBox"
            VerticalAlignment="Top"
            Width="192"
            Background="#FF10F51B"
            FontFamily="OCR A Extended"
            KeyDown="enter" />
    </Grid>
</Window>
